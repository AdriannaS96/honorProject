<section id="listings" class="container my-5">
  <h2 class="mb-4">Available Listings</h2>
  <div class="row g-4">
    {{#listings}}
    <div class="col-md-6 col-lg-4">
      <div class="card listing-card shadow-sm h-100">
        <a href="/dashboard/landlord/listing/{{id}}" class="text-decoration-none text-dark">
          <img src="{{imageUrl}}" alt="{{title}}" class="card-img-top listing-main-img" />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text text-muted mb-1">{{location}}</p>
            <p class="card-text fw-bold mb-2">Â£{{price}}</p>
            <p class="card-text text-truncate">{{description}}</p>
            <div class="mt-auto">
              <a href="/dashboard/landlord/listing/{{id}}" class="btn btn-primary w-100">
                View Details
              </a>
            </div>
          </div>
        </a>
      </div>
    </div>
    {{/listings}}

    {{^listings}}
    <p>No listings available yet.</p>
    {{/listings}}
  </div>
</section>
