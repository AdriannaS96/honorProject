{{> header}}

<div class="container my-5">

  <h2 class="mb-4 text-center fw-semibold">Search Listings</h2>

  <!-- SEARCH FORM -->
  <form action="/listings/search" method="GET" class="card shadow-sm p-4 search-card">
    <div class="row g-3">

      <div class="col-md-4">
        <input
          type="text"
          class="form-control"
          name="location"
          placeholder="City / Location"
          value="{{filters.location}}">
      </div>

      <div class="col-md-4">
        <input
          type="text"
          class="form-control"
          name="area"
          placeholder="Area / Neighbourhood"
          value="{{filters.area}}">
      </div>

      <div class="col-md-4">
        <input
          type="text"
          class="form-control"
          name="postcode"
          placeholder="Postcode"
          value="{{filters.postcode}}">
      </div>

      <div class="col-md-3">
        <input
          type="number"
          class="form-control"
          name="minPrice"
          placeholder="Min Price (Â£)"
          value="{{filters.minPrice}}">
      </div>

      <div class="col-md-3">
        <input
          type="number"
          class="form-control"
          name="maxPrice"
          placeholder="Max Price (Â£)"
          value="{{filters.maxPrice}}">
      </div>

      <div class="col-md-6 d-grid">
        <button type="submit" class="btn btn-primary btn-lg">
          ğŸ” Search Listings
        </button>
      </div>

    </div>
  </form>
</div>

<hr class="my-5">

<!-- LISTINGS -->
<div class="container">
  <div class="row">

    {{#listings.length}}
      {{#listings}}
      <div class="col-md-4 mb-4">
        <div class="card listing-card h-100">

          <img
            src="{{#images.length}}{{images.0.url}}{{/images.length}}{{^images.length}}/images/default-house.jpg{{/images.length}}"
            class="card-img-top listing-img"
            alt="{{title}}">

          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{title}}</h5>

            <p class="text-muted small mb-2">
              {{location}} Â· {{area}}
            </p>

            <p class="price mb-3">Â£{{price}}</p>

            <a href="/listing/{{_id}}" class="btn btn-outline-primary mt-auto">
              View Listing â†’
            </a>
          </div>
        </div>
      </div>
      {{/listings}}
    {{/listings.length}}

    {{^listings.length}}
      <p class="text-center text-muted fs-5">
        ğŸ˜• No listings match your search.
      </p>
    {{/listings.length}}

  </div>
</div>

