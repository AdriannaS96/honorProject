{{> header}}

<!-- HERO -->
<header class="hero d-flex align-items-center justify-content-center text-center">
  <div class="hero-overlay"></div> <!-- overlay gradient -->
  <div class="container position-relative text-white">
    <span class="badge bg-primary mb-3 shadow-sm animate__animated animate__fadeInDown">Trusted Housing Platform</span>
    <h1 class="display-4 fw-bold mb-3 animate__animated animate__fadeInDown animate__delay-1s">Find Your Perfect Home</h1>
    <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-2s">
      Browse apartments, connect with landlords, and move in faster.
    </p>
    <a href="#listings" class="btn btn-primary btn-lg px-5 shadow-sm animate__animated animate__fadeInUp animate__delay-3s">
      Browse Listings
    </a>
  </div>
</header>

<!-- FEATURED LISTINGS -->
<section id="listings" class="container my-5">
  <h2>Featured Listings</h2>
  <div class="featured-listings d-flex flex-wrap gap-4">
    {{#featuredListings}}
      <div class="listing-card card shadow-sm" style="width: 18rem;">
        <a href="/listing/{{id}}">
          <img src="{{imageUrl}}" alt="{{title}}" class="card-img-top listing-main-img" />
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{location}}</p>
            <p class="card-text fw-bold">Â£{{price}}</p>
          </div>
        </a>
      </div>
    {{/featuredListings}}
  </div>
</section>
<section class="container mb-5">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
    <div>
      <h2 class="h4 mb-1">Explore Listings on the Map</h2>
      <p class="text-muted mb-0">See where your next home could be located.</p>
    </div>
    <p id="home-map-status" class="small text-muted mt-2 mt-md-0" aria-live="polite"></p>
  </div>
  <div id="home-map" class="home-map rounded"></div>
</section>

<script>
  window.listingMapData = {{{mapListingsJson}}};
</script>

<!-- ABOUT -->
<section id="about" class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-md-8">
        <h2 class="fw-bold mb-3 animate__animated animate__fadeIn">Why HousingPlatform?</h2>
        <p class="text-muted fs-5 mb-4 animate__animated animate__fadeIn animate__delay-1s">
          We simplify the rental process by connecting tenants and landlords
          through a secure, modern platform.
        </p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
          <div class="card border-0 shadow-sm p-3 text-center animate__animated animate__fadeInUp animate__delay-2s" style="width: 14rem;">
            <i class="fas fa-shield-alt fa-2x text-primary mb-2"></i>
            <h5 class="fw-bold">Secure</h5>
            <p class="text-muted small">All transactions and communications are encrypted.</p>
          </div>
          <div class="card border-0 shadow-sm p-3 text-center animate__animated animate__fadeInUp animate__delay-3s" style="width: 14rem;">
            <i class="fas fa-bolt fa-2x text-primary mb-2"></i>
            <h5 class="fw-bold">Fast</h5>
            <p class="text-muted small">Find and rent your home quickly with our platform.</p>
          </div>
          <div class="card border-0 shadow-sm p-3 text-center animate__animated animate__fadeInUp animate__delay-4s" style="width: 14rem;">
            <i class="fas fa-users fa-2x text-primary mb-2"></i>
            <h5 class="fw-bold">Connected</h5>
            <p class="text-muted small">Directly communicate with landlords and tenants.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{> footer}}
