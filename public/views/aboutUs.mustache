{{> header}}

<!-- ABOUT HERO -->
<section class="about-hero text-white">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <span class="badge bg-primary mb-3">About Us</span>
        <h1 class="display-5 fw-bold mb-3">
          Making Housing Simple & Accessible
        </h1>
        <p class="lead">
          HousingPlatform connects tenants and landlords through a secure,
          modern, and easy-to-use platform.
        </p>
      </div>

      <div class="col-md-6 text-center">
        <img
          src="/images/about-illustration.png"
          alt="About HousingPlatform"
          class="img-fluid about-hero-image"
        />
      </div>
    </div>
  </div>
</section>

<!-- MISSION -->
<section class="container py-5">
  <div class="row text-center justify-content-center">
    <div class="col-md-8">
      <h2 class="fw-bold mb-3">Our Mission</h2>
      <p class="text-muted fs-5">
        We aim to simplify the rental process by eliminating unnecessary steps,
        improving communication, and providing transparency for everyone.
      </p>
    </div>
  </div>
</section>

<!-- VALUES -->
<section class="bg-light py-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="value-card text-center p-4">
          <i class="bi bi-shield-check value-icon"></i>
          <h5 class="fw-bold mt-3">Security</h5>
          <p class="text-muted">
            We prioritize data protection and safe communication.
          </p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="value-card text-center p-4">
          <i class="bi bi-lightning-charge value-icon"></i>
          <h5 class="fw-bold mt-3">Speed</h5>
          <p class="text-muted">
            Find and rent properties faster than ever before.
          </p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="value-card text-center p-4">
          <i class="bi bi-people value-icon"></i>
          <h5 class="fw-bold mt-3">Community</h5>
          <p class="text-muted">
            Connecting people and building trust on both sides.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA -->
<section class="about-cta text-white text-center">
  <div class="container">
    <h2 class="fw-bold mb-3">Ready to find your next home?</h2>
    <a href="/listings" class="btn btn-light btn-lg px-5">
      Browse Listings
    </a>
  </div>
</section>

{{> footer}}
