{{> header}}

<section class="container my-5">
  <div class="row">
    <div class="col-md-6">
      {{#listing.images}}
        <img src="{{url}}" alt="{{../listing.title}}" class="img-fluid mb-3" />
        {{#@first}}
          <!-- pokazujemy tylko pierwsze zdjęcie jako główne -->
        {{/@first}}
      {{/listing.images}}
      {{^listing.images}}
        <img src="/images/default-house.jpg" alt="No Image" class="img-fluid mb-3" />
      {{/listing.images}}
    </div>
    <div class="col-md-6">
      <h1>{{listing.title}}</h1>
      <p class="text-muted">{{listing.location}}</p>
      <h3 class="fw-bold">€{{listing.price}}</h3>
      <p>{{listing.description}}</p>
      <p>Status: <span class="badge bg-info">{{listing.status}}</span></p>

      {{#user}}
        {{#isOwner}}
          <a href="/dashboard/landlord/edit/{{listing._id}}" class="btn btn-warning me-2">Edit Listing</a>
          <a href="/dashboard/landlord/delete/{{listing._id}}" class="btn btn-danger">Delete Listing</a>
        {{/isOwner}}
      {{/user}}

      <a href="/contact?landlord={{listing.landlord}}" class="btn btn-primary mt-3">Contact Landlord</a>
    </div>
  </div>
</section>

{{> footer}}
