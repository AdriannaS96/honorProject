{{> header}}
<body>
  <div class="dashboard-container">

    <!-- Sidebar -->
        <!-- Sidebar -->
    <nav class="sidebar">
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link active" href="/dashboard/landlord">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord/my_listings">My Listings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord/add_listing">Add Listing</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord/messages">Messages</a>
        </li>
      </ul>
    </nav>

    <!-- Main content -->
    <main class="main-content">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">My Listings</h1>
      </div>

      <!-- Table of listings -->
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Location</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#listings}}
            <tr>
              <td>{{title}}</td>
              <td>{{location}}</td>
              <td>{{status}}</td>
              <td>
                <button class="btn btn-sm btn-primary">Edit</button>
                <button class="btn btn-sm btn-danger">Delete</button>
              </td>
            </tr>
            {{/listings}}
          </tbody>
        </table>
      </div>

    </main>
  </div>

  {{> footer}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
