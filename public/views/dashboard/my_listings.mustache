{{> header}}

<div class="dashboard-container">

  <!-- SIDEBAR -->
  <nav class="sidebar">
    <h4 class="sidebar-title">Landlord</h4>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/landlord_dashboard">
          <i class="bi bi-speedometer2"></i>
          Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/dashboard/landlord/my_listings">
          <i class="bi bi-house-door"></i>
          My Listings
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/landlord/add_listing">
          <i class="bi bi-plus-circle"></i>
          Add Listing
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/landlord/messages">
          <i class="bi bi-chat-dots"></i>
          Messages
        </a>
      </li>
          <!-- My Account -->
    <li class="nav-item">
      <a class="nav-link" href="/account">
        <i class="bi bi-person"></i>
        My Account
      </a>
    </li>
      <li class="nav-item mt-3">
        <a class="nav-link text-danger" href="/logout">
          <i class="bi bi-box-arrow-right"></i>
          Logout
        </a>
      </li>
    </ul>
  </nav>

  <!-- MAIN -->
  <main class="main-content">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="fw-bold">My Listings</h1>
        <p class="text-muted mb-0">Manage your properties and listing status</p>
      </div>

      <a href="/dashboard/landlord/add_listing" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i>
        Add Listing
      </a>
    </div>

    <!-- Listings grid -->
    <div class="row g-4">

      {{#listings}}
      <div class="col-md-6 col-lg-4">

        <div class="listing-card">

          <!-- IMAGE (clickable) -->
          <a href="/dashboard/landlord/listing/{{_id}}">
            <div class="listing-image">
              {{#images}}
                <img src="{{url}}" alt="{{title}}">
                {{! pokazujemy tylko pierwsze zdjęcie }}
                {{break}}
              {{/images}}

              {{^images}}
                <img src="/placeholder.jpg" alt="No image">
              {{/images}}

              <span class="status-badge {{status}}">
                {{status}}
              </span>
            </div>
          </a>

          <!-- CONTENT -->
          <div class="listing-content">

            <a href="/dashboard/landlord/listing/{{_id}}" style="text-decoration:none;color:inherit;">
              <h5 class="fw-bold mb-1">{{title}}</h5>

              <p class="text-muted small mb-2">
                <i class="bi bi-geo-alt"></i>
                {{location}}
              </p>

              <p class="fw-semibold mb-2">
                £{{price}} / month
              </p>
            </a>

            <!-- ACTIONS -->
            <div class="listing-actions">
              <a
                href="/dashboard/landlord/edit/{{_id}}"
                class="btn btn-sm btn-outline-primary"
              >
                <i class="bi bi-pencil"></i>
                Edit
              </a>

              <a
                href="/dashboard/landlord/delete/{{_id}}"
                class="btn btn-sm btn-outline-danger"
                onclick="return confirm('Are you sure you want to delete this listing?');"
              >
                <i class="bi bi-trash"></i>
                Delete
              </a>
            </div>

          </div>
        </div>

      </div>
      {{/listings}}

      {{^listings}}
      <div class="col-12">
        <div class="empty-state text-center">
          <i class="bi bi-house-slash"></i>
          <h4>No listings yet</h4>
          <p class="text-muted">
            Add your first property to start receiving applications.
          </p>
          <a href="/dashboard/landlord/add_listing" class="btn btn-primary">
            Add Listing
          </a>
        </div>
      </div>
      {{/listings}}

    </div>

  </main>
</div>

{{> footer}}

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
