{{> header}}
<body>
  <div class="dashboard-container">

    <!-- Sidebar -->
    <nav class="sidebar">
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord_dashboard">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord/my_listings">My Listings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/dashboard/landlord/add_listing">Add Listing</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord/messages">Messages</a>
        </li>
      </ul>
    </nav>

    <!-- Main content -->
    <main class="main-content">
      <div class="d-flex justify-content-between align-items-center mb-3 border-bottom">
        <h1 class="h2">Add New Listing</h1>
      </div>

      <div class="card mb-4">
        <div class="card-body">

          <form action="/dashboard/landlord/add_listing"
                method="POST"
                enctype="multipart/form-data">

            <!-- Title -->
            <div class="mb-3">
              <label class="form-label">Title</label>
              <input type="text" name="title" class="form-control" required>
            </div>

            <!-- Location -->
            <div class="mb-3">
              <label class="form-label">Location</label>
              <input type="text" name="location" class="form-control" required>
            </div>

            <!-- Status -->
            <div class="mb-3">
              <label class="form-label">Status</label>
              <select name="status" class="form-select" required>
                <option value="Active">Active</option>
                <option value="Pending">Pending</option>
                <option value="Closed">Closed</option>
              </select>
            </div>

            <!-- Images -->
            <div class="mb-4">
              <label class="form-label">Listing Images</label>
              <input
                type="file"
                name="images"
                class="form-control"
                accept="image/*"
                multiple
              >
              <div class="form-text">
                You can upload multiple images (JPG, PNG). Recommended size: 1200Ã—800.
              </div>
            </div>

            <button type="submit" class="btn btn-primary">
              Add Listing
            </button>

          </form>

        </div>
      </div>
    </main>
  </div>

  {{> footer}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
