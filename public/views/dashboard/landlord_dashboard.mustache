{{> header}}

<div class="dashboard-container">

  <!-- SIDEBAR -->
  <nav class="sidebar">
    <h4 class="sidebar-title">Landlord</h4>

    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link active" href="/dashboard/landlord_dashboard">
          <i class="bi bi-speedometer2"></i>
          Dashboard
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/dashboard/landlord/my_listings">
          <i class="bi bi-house-door"></i>
          My Listings
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/dashboard/landlord/add_listing">
          <i class="bi bi-plus-circle"></i>
          Add Listing
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/dashboard/landlord/messages">
          <i class="bi bi-chat-dots"></i>
          Messages
        </a>
      </li>

      <li class="nav-item mt-3">
        <a class="nav-link text-danger" href="/logout">
          <i class="bi bi-box-arrow-right"></i>
          Logout
        </a>
      </li>
    </ul>
  </nav>

  <!-- MAIN CONTENT -->
  <main class="main-content">

    <div class="dashboard-header">
      <h2>Welcome, {{user.username}} ðŸ‘‹</h2>
      <p class="text-muted">Manage your properties and tenants</p>
    </div>

    <!-- STATS -->
    <div class="stats-grid">

      <div class="stat-card">
        <div class="stat-icon bg-primary">
          <i class="bi bi-house-check"></i>
        </div>
        <div class="stat-info">
          <h4>{{activeListings}}</h4>
          <span>Active Listings</span>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-icon bg-warning">
          <i class="bi bi-hourglass-split"></i>
        </div>
        <div class="stat-info">
          <h4>{{pendingRequests}}</h4>
          <span>Pending Requests</span>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-icon bg-success">
          <i class="bi bi-chat-dots"></i>
        </div>
        <div class="stat-info">
          <h4>{{messages}}</h4>
          <span>Messages</span>
        </div>
      </div>

    </div>

    <!-- QUICK ACTIONS -->
    <div class="card mt-4">
      <div class="card-body">
        <h5 class="card-title">Quick Actions</h5>

        <div class="d-flex gap-3 mt-3 flex-wrap">
          <a href="/dashboard/landlord/add_listing" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add new listing
          </a>

          <a href="/dashboard/landlord/my_listings" class="btn btn-outline-secondary">
            <i class="bi bi-house-door"></i> View my listings
          </a>

          <a href="/dashboard/landlord/messages" class="btn btn-outline-success">
  <i class="bi bi-chat-dots"></i> Open messages
</a>
        </div>
      </div>
    </div>

  </main>
</div>

{{> footer}}

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
  rel="stylesheet"
/>
