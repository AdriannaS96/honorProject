{{> header}}

<div class="dashboard-container">

  <nav class="sidebar">
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link active" href="/dashboard/messages">
          <i class="bi bi-chat-dots"></i> Messages
        </a>
      </li>
    </ul>
  </nav>

  <main class="main-content">

    <div class="messages-wrapper">

      <div class="conversations-panel">
        <h5 class="fw-bold p-3">Conversations</h5>

        <ul class="conversation-list">
          {{#conversations}}
          <li class="conversation-item">
            <div class="avatar">{{initials}}</div>
            <div>{{nickname}}</div>
          </li>
          {{/conversations}}
        </ul>
      </div>

      <div class="chat-panel">

        <div class="chat-header">
          <strong>New message</strong>
        </div>

        <div class="chat-messages text-muted text-center">
          Select a conversation or send a new message
        </div>

        <form
          class="chat-input"
          method="POST"
          action="/dashboard/messages/send"
        >
          <input
            type="text"
            name="to"
            class="form-control mb-2"
            placeholder="Recipient nickname"
            required
          >

          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Type a message..."
            required
          >

          <button class="btn btn-primary mt-2 w-100">
            Send
          </button>
        </form>

      </div>

    </div>

  </main>
</div>

{{> footer}}

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
