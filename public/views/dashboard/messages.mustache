{{> header}}
<body>
  <div class="dashboard-container">

    <!-- Sidebar -->
    <nav class="sidebar">
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord/my_listings">My Listings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/landlord/add_listing">Add Listing</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/dashboard/landlord/messages">Messages</a>
        </li>
      </ul>
    </nav>

    <!-- Main content -->
    <main class="main-content">

      <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h1 class="h3 mb-0">Messages</h1>
      </div>

      {{#messages}}
      <div class="card mb-3 message-card">
        <div class="card-body d-flex gap-3">

          <!-- Avatar -->
          <div class="message-avatar">
            {{senderInitial}}
          </div>

          <!-- Content -->
          <div class="flex-grow-1">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-1">{{subject}}</h5>
              <small class="text-muted">{{date}}</small>
            </div>

            <p class="mb-1 text-muted">{{preview}}</p>

            <div class="d-flex justify-content-between align-items-center">
              <small class="text-secondary">From: {{sender}}</small>

              {{#unread}}
              <span class="badge bg-primary">NEW</span>
              {{/unread}}
            </div>
          </div>
        </div>
      </div>
      {{/messages}}

      {{^messages}}
      <div class="alert alert-info">
        No messages yet.
      </div>
      {{/messages}}

    </main>
  </div>

  {{> footer}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
