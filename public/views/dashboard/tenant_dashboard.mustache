{{> header}}

<div class="dashboard-container">

  <!-- Sidebar -->
  <nav class="sidebar">
    <div class="sidebar-header text-center mb-4">
      <h5 class="fw-bold">Tenant Panel</h5>
    </div>

    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link active" href="#">
          <i class="bi bi-heart"></i>
          Saved Listings
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/applications">
          <i class="bi bi-send"></i>
          Applications
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/messages">
          <i class="bi bi-chat-dots"></i>
          Messages
        </a>
      </li>
    </ul>
  </nav>

  <!-- Main -->
  <main class="main-content">

    <!-- Header -->
    <div class="dashboard-header mb-4">
      <h1 class="fw-bold">Welcome back, {{user.username}} ðŸ‘‹</h1>
      <p class="text-muted">
        Hereâ€™s a quick overview of your activity.
      </p>
    </div>

    <!-- Stats cards -->
    <div class="row g-4 dashboard-stats mb-5">

      <div class="col-md-4">
        <div class="stat-card blue">
          <div class="stat-icon">
            <i class="bi bi-heart-fill"></i>
          </div>
          <div>
            <h6>Saved Listings</h6>
            <h3>{{savedListingsCount}}</h3>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="stat-card green">
          <div class="stat-icon">
            <i class="bi bi-send-check"></i>
          </div>
          <div>
            <h6>Applications Sent</h6>
            <h3>{{applicationsSent}}</h3>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="stat-card orange">
          <div class="stat-icon">
            <i class="bi bi-chat-dots-fill"></i>
          </div>
          <div>
            <h6>Messages</h6>
            <h3>{{messages}}</h3>
          </div>
        </div>
      </div>

    </div>

    <!-- SAVED LISTINGS SECTION -->
    <section>
      <h3 class="fw-bold mb-4">
        <i class="bi bi-heart-fill text-danger me-2"></i>
        Saved Listings
      </h3>

      <div class="row g-4">

        {{#savedListings}}
        <!-- Saved listing card -->
        <div class="col-md-4">
          <div class="card h-100 shadow-sm listing-card">

            <img
              src="{{imageUrl}}"
              class="card-img-top"
              alt="{{title}}"
              style="height: 200px; object-fit: cover;"
            >

            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{title}}</h5>
              <p class="text-muted mb-1">{{location}}</p>
              <p class="fw-bold mb-3">Â£{{price}}</p>

              <a href="/listing/{{_id}}" class="btn btn-outline-primary mt-auto">View details</a>

            </div>

          </div>
        </div>
        {{/savedListings}}

        {{^savedListings}}
        <!-- Empty state -->
        <div class="col-12">
          <div class="alert alert-light text-center p-5">
            <i class="bi bi-heart text-muted fs-1 mb-3 d-block"></i>
            <h5 class="fw-bold">No saved listings yet</h5>
            <p class="text-muted mb-0">
              Browse listings and click the heart icon to save your favourites.
            </p>
          </div>
        </div>
        {{/savedListings}}

      </div>
    </section>

  </main>
</div>

{{> footer}}

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
  rel="stylesheet"
/>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
