{{> header}}

<div class="dashboard-container">

  <!-- Sidebar -->
  <nav class="sidebar">
    <div class="sidebar-header text-center mb-4">
      <h5 class="fw-bold">Tenant Panel</h5>
    </div>

    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link active" href="#">
          <i class="bi bi-heart"></i>
          Saved Listings
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/applications">
          <i class="bi bi-send"></i>
          Applications
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/Messages">
          <i class="bi bi-chat-dots"></i>
          Messages
        </a>
      </li>
    </ul>
  </nav>

  <!-- Main -->
  <main class="main-content">

    <!-- Header -->
    <div class="dashboard-header mb-4">
      <h1 class="fw-bold">Welcome back, {{user.username}} ðŸ‘‹</h1>
      <p class="text-muted">
        Hereâ€™s a quick overview of your activity.
      </p>
    </div>

    <!-- Stats cards -->
    <div class="row g-4 dashboard-stats">

      <div class="col-md-4">
        <div class="stat-card blue">
          <div class="stat-icon">
            <i class="bi bi-heart-fill"></i>
          </div>
          <div>
            <h6>Saved Listings</h6>
            <h3>{{savedListings}}</h3>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="stat-card green">
          <div class="stat-icon">
            <i class="bi bi-send-check"></i>
          </div>
          <div>
            <h6>Applications Sent</h6>
            <h3>{{applicationsSent}}</h3>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="stat-card orange">
          <div class="stat-icon">
            <i class="bi bi-chat-dots-fill"></i>
          </div>
          <div>
            <h6>Messages</h6>
            <h3>{{messages}}</h3>
          </div>
        </div>
      </div>

    </div>

  </main>
</div>

{{> footer}}

