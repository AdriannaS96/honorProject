{{> header}}

<div class="container my-5">

  <a href="/dashboard/landlord/my_listings" class="btn btn-link mb-3">
    ← Back to My Listings
  </a>

  <h1 class="fw-bold mb-3">{{listing.title}}</h1>

  <p class="text-muted">
    <i class="bi bi-geo-alt"></i>
    {{listing.location}}
  </p>

  <h4 class="mb-4">£{{listing.price}} / month</h4>

  <!-- Images -->
  <div class="row mb-4">
    {{#listing.images}}
      <div class="col-md-4 mb-3">
        <img
          src="{{url}}"
          alt="Listing image"
          class="img-fluid rounded"
        />
      </div>
    {{/listing.images}}

    {{^listing.images}}
      <p>No images available</p>
    {{/listing.images}}
  </div>

  <!-- Description -->
  <div class="mb-4">
    <h5>Description</h5>
    <p>{{listing.description}}</p>
  </div>

  <!-- Status -->
  <p>
    <span class="badge bg-secondary">
      {{listing.status}}
    </span>
  </p>

  <!-- Actions -->
  <div class="mt-4">
    <a
      href="/dashboard/landlord/edit/{{listing._id}}"
      class="btn btn-outline-primary me-2"
    >
      Edit
    </a>

    <a
      href="/dashboard/landlord/delete/{{listing._id}}"
      class="btn btn-outline-danger"
      onclick="return confirm('Are you sure you want to delete this listing?');"
    >
      Delete
    </a>
  </div>

</div>

{{> footer}}
